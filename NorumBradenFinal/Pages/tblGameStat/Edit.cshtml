@page
@model NorumBradenFinal.Pages.tblGameStats.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TblGameStat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblGameStat.Gamestatsid" />
            <div class="form-group">
                <label asp-for="TblGameStat.Turnstaken" class="control-label"></label>
                <input asp-for="TblGameStat.Turnstaken" class="form-control" />
                <span asp-validation-for="TblGameStat.Turnstaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblGameStat.Damagetaken" class="control-label"></label>
                <input asp-for="TblGameStat.Damagetaken" class="form-control" />
                <span asp-validation-for="TblGameStat.Damagetaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblGameStat.Name" class="control-label"></label>
                <input asp-for="TblGameStat.Name" class="form-control" />
                <span asp-validation-for="TblGameStat.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblGameStat.Enemyid" class="control-label"></label>
                <select asp-for="TblGameStat.Enemyid" class="form-control" asp-items="ViewBag.Enemyid"></select>
                <span asp-validation-for="TblGameStat.Enemyid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblGameStat.Playerid" class="control-label"></label>
                <select asp-for="TblGameStat.Playerid" class="form-control" asp-items="ViewBag.Playerid"></select>
                <span asp-validation-for="TblGameStat.Playerid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
